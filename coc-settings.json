{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                },
                "clang": {
                    "resourceDir": "/usr/lib64/clang/10.0.0"
                }
            }
        }
    },
    "diagnostic.virtualText": true
}
